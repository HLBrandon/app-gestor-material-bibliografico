<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo del libro"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="1558888877445122"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Nombre del lector"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txt_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="correo@example.com"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txt_fecha_prestamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prestamo: AAAA-MM-DD HH-mm-SS"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/txt_fecha_devolucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DevoluciÃ³n: AAAA-MM-DD HH-mm-SS"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txt_estatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devuelto / No Devuelto" />

        <TextView
            android:id="@+id/txt_perdido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perdido / No Perdido" />

    </LinearLayout>
</androidx.cardview.widget.CardView>