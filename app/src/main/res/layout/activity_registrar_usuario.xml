<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarUsuarioActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" >

        <!-- Titulo de la actividad -->
        <TextView
            android:id="@+id/lb_titulo_registrar_libro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo Usuario"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginVertical="60dp" />

        <!-- Campo para llenar titulo del libro -->
        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textSize="20dp"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/txtApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:textSize="20dp"
            android:layout_marginHorizontal="20dp" />

        <EditText
            android:id="@+id/txtTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="N° de Telefono"
            android:textSize="20dp"
            android:inputType="phone"
            android:layout_marginHorizontal="20dp" />

        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            android:textSize="20dp"
            android:layout_marginHorizontal="20dp" />

        <EditText
            android:id="@+id/txtContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:layout_marginHorizontal="20dp" />

        <EditText
            android:id="@+id/txtRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar Role"
            android:textSize="20dp"
            android:focusable="false"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"/>


        <!-- Botones de crear y volver atras -->
        <Button
            android:id="@+id/btnCrear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/color_primario_oscuro"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:layout_below="@+id/txtNombre" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textSize="20dp"
            android:padding="15dp"
            android:backgroundTint="@color/gris_oscuro"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@+id/btnCrear" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>